<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context="com.example.sebastianmunozalvial.horoscopo.mostrar_acuario">


    <TextView
        android:id="@+id/lblNombreUsuario_Virgo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/letras"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/btnVolver"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/letras" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_boton"
        android:text="Volver"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/txt"
        android:layout_below="@+id/lblNombreUsuario_Virgo"
        android:text="Virgo"
        android:textAlignment="center"
        android:textColor="@color/letras"
        android:textSize="40dp" />

</RelativeLayout>
